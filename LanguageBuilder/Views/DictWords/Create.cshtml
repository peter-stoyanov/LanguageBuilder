@model LanguageBuilder.Models.DictWord

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create new dictionary entry</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DictWord</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p> Word gender </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.word_gender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.word_gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> German name </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.german_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.german_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> English name </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.english_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.english_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> Speech type </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.speech_type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.speech_type, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p> Conjugation </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.conjugation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.conjugation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
