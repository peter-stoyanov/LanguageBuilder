
<!--model IEnumerable<LanguageBuilder.Models.DictWord> -->
@model PagedList.IPagedList<LanguageBuilder.Models.UserWord>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Review</h2>

<h3>Do you know the word?</h3>



<p>&nbsp;</p>
<p>&nbsp;</p>

<div class="container">
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                gender
            </th>
            <th>
                in German
            </th>
            <th>
                speech type
            </th>
            <th>
                conjugation
            </th>
            <th>
                review
            </th>
            <th>
                in English
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DictWord.word_gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DictWord.german_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DictWord.speech_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DictWord.conjugation)
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-lg" value="Create" onclick="location.href='@Url.Action("LevelUp", "UserWords", new { id = item.UserWordID})'">
                        <span class="• glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Yes
                    </button>
                    <button type="button" class="btn btn-default btn-lg" value="Create" onclick="location.href='@Url.Action("LevelDown", "UserWords", new { id = item.UserWordID})'">
                        <span class="• glyphicon glyphicon-thumbs-down" aria-hidden="true"></span> No
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DictWord.english_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserWordID })
                </td>
            </tr>
        }

    </table>
</div>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))

